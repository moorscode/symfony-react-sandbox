{# templates/data_collector/template.html.twig #}
{% extends '@WebProfiler/Profiler/layout.html.twig' %}

{% block toolbar %}
    {% set icon %}
        {{ include('data_collector/icon.svg') }}
        {# this is the content displayed as a panel in the toolbar #}
        <span class="sf-toolbar-value">{{ collector.requests|length }}</span>
        <span class="sf-toolbar-label">render{{ ( collector.requests|length ) == 1 ? '' : 's' }}</span>
    {% endset %}

    {# the 'link' value set to 'false' means that this panel doesn't
       show a section in the web profiler #}
    {{ include('@WebProfiler/Profiler/toolbar_item.html.twig', { 'link': true }) }}
{% endblock %}

{% block menu %}
    {# This left-hand menu appears when using the full-screen profiler. #}
    <span class="label">
        <span class="icon">{{ include('data_collector/icon.svg') }}</span><strong>Server Side Renders</strong>
    </span>
{% endblock %}

{% block head %}
    {{ parent() }}

    {# Optional. Here you can link to or define your own CSS and JS contents. #}
    {# Use {{ parent() }} to extend the default styles instead of overriding them. #}
{% endblock %}

{% block panel %}

    {# Optional, for showing the most details. #}
    <h2>React Server Side Renders</h2>

    <div class="block" id="tab-1-0" role="tabpanel" aria-labelledby="tab-1-0">
        <h3 class="hidden">Called Requests <span class="badge">{{ collector.requests|length }}</span></h3>

        <div class="tab-content">
            {% for request in collector.requests %}
                <table>
                    <thead>
                    <tr>
                        <th>Served by {{ request.server }}</th>
                    </tr>
                    </thead>

                    <tbody>
                    <tr>
                        <td class="font-normal">
                            <strong>Request</strong><br/>
                            <code>{{ request.request }}</code>
                        </td>
                    </tr>
                    <tr>
                        <td class="font-normal">
                            <strong>Response</strong><br/>
                            <code>{{ request.response }}</code>
                        </td>
                    </tr>


                    </tbody>
                </table>
            {% endfor %}

        </div>
    </div>

{% endblock %}
